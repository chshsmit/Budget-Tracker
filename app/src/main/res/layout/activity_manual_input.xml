<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="christophershae.budgettracker.ManualInputActivity">

    <EditText
        android:id="@+id/itemName"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Item Name"
        tools:layout_editor_absoluteY="31dp"
        app:layout_constraintRight_toLeftOf="@+id/itemPrice"
        android:layout_marginRight="19dp" />

    <Button
        android:id="@+id/addItemToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        tools:layout_editor_absoluteX="59dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/itemsAddedToBudgetAlready" />

    <Button
        android:id="@+id/finishAddingItemsToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        tools:layout_editor_absoluteX="213dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/itemsAddedToBudgetAlready" />

    <ExpandableListView
        android:layout_width="300dp"
        android:layout_height="45dp"
        tools:layout_editor_absoluteX="30dp"
        android:id="@+id/categoryListView"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="233dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryListView"
        tools:layout_editor_absoluteX="30dp"
        android:id="@+id/itemsAddedToBudgetAlready" />

    <EditText
        android:id="@+id/itemPrice"
        android:layout_width="88dp"
        android:layout_height="45dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/zero_dollars"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/categoryListView"
        tools:layout_editor_absoluteX="242dp" />
</android.support.constraint.ConstraintLayout>
